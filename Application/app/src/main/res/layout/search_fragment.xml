<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borderline"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borderline"
                android:gravity="center"
                android:text="시간\n+"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/search_local_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borderline"
                android:gravity="center"
                android:text="지역\n+"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/search_event_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borderline"
                android:gravity="center"
                android:text="사건\n+"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borderline"
            android:orientation="horizontal">

            <Button
                android:id="@+id/search_search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="검색" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/search_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:visibility="invisible">

            <Button
                android:id="@+id/search_prev_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="&lt;"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/search_now_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/borderline"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/search_next_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="&gt;"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>