<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView_main_repository"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보관함"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/button_main_repository"
        app:layout_constraintStart_toStartOf="@+id/button_main_repository"
        app:layout_constraintTop_toBottomOf="@+id/button_main_repository" />

    <TextView
        android:id="@+id/textView_main_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지도"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/button_main_map"
        app:layout_constraintStart_toStartOf="@+id/button_main_map"
        app:layout_constraintTop_toBottomOf="@+id/button_main_map" />

    <TextView
        android:id="@+id/textView_main_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/button_main_setting"
        app:layout_constraintStart_toStartOf="@+id/button_main_setting"
        app:layout_constraintTop_toBottomOf="@+id/button_main_setting" />

    <TextView
        android:id="@+id/textView_main_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/button_main_search"
        app:layout_constraintStart_toStartOf="@+id/button_main_search"
        app:layout_constraintTop_toBottomOf="@+id/button_main_search" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/purple_200"
        app:buttonGravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_chevron_left_24"
        app:subtitleTextColor="@color/black"
        app:titleTextColor="@color/black">

        <TextView
            android:id="@+id/toolbar_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/toolbar_main_name"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="20dp" />
    </androidx.appcompat.widget.Toolbar>

    <ImageButton
        android:id="@+id/button_main_repository"
        android:layout_width="132dp"
        android:layout_height="121dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView_main_repository"
        app:layout_constraintEnd_toStartOf="@+id/button_main_map"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main"
        app:srcCompat="@drawable/ic_iconmonstr_shipping_box_2" />

    <ImageButton
        android:id="@+id/button_main_search"
        android:layout_width="132dp"
        android:layout_height="121dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView_main_search"
        app:layout_constraintEnd_toStartOf="@+id/button_main_setting"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_repository"
        app:srcCompat="@drawable/ic_iconmonstr_magnifier_10" />

    <ImageButton
        android:id="@+id/button_main_setting"
        android:layout_width="132dp"
        android:layout_height="121dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView_main_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_main_search"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_map"
        app:srcCompat="@drawable/ic_iconmonstr_gear_10" />

    <ImageButton
        android:id="@+id/button_main_map"
        android:layout_width="132dp"
        android:layout_height="121dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView_main_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_main_repository"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main"
        app:srcCompat="@drawable/ic_iconmonstr_map_6" />

</androidx.constraintlayout.widget.ConstraintLayout>