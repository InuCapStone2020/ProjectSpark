<solid android:color="@color/white_red" />
<!-- 테두리 내부 여백 설정 -->
<padding
    android:bottom="0dp"
    android:right="0dp"
    android:left="0dp"/>

<!-- 테두리 설정: 두께, 색상 -->
<stroke
    android:width="1dp"
    android:color="@android:color/black" />
